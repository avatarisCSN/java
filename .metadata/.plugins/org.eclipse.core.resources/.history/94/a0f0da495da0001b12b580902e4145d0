			        // ListView<String>
			         ObjUsListView = new ListView<String>(names);


			         VBox vbox2 = new VBox();

					    vbox2.setSpacing(10);
					    Text text10 = new Text("Вывод");


							    vbox2.getChildren().addAll(text10, ObjUsListView );



		    BorderPane root2 = new BorderPane();
			root2.setTop(gridPane);
			root2.setRight(vbox);
			root2.setCenter( vbox2);
