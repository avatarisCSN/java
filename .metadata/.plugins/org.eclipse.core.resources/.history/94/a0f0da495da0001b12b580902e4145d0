		      gridPane.add(button2, 4, 3);
		      gridPane.add(text6, 2, 3);
		      gridPane.add(text7, 3, 3);

		     


		      VBox vbox = new VBox();

			    vbox.setSpacing(10);
			    Button btn3 = new Button("Чтение файла");
			    Button btn4 = new Button("Очистка");
			    Button btn5 = new Button("Поиск");
			    Button btn6 = new Button("Поиск");
